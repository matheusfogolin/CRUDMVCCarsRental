@model IEnumerable<CRUDMVCCarsRental.Models.RentsViewModel>

@{
    ViewData["Title"] = "Index";
}

<center><h1>Histórico de Aluguéis</h1></center>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaysRented)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DaysRented)
                </td>
                <td>
                    <a asp-action="Cancel" asp-route-id="@item.Id">Cancelar Aluguel</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <center><a asp-action="Index">Voltar</a></center>
</div>
